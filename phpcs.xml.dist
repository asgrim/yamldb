<?xml version="1.0"?>
<ruleset name="YamlDB coding standard">
    <arg value="p"/>
    <arg value="s"/>
    <arg name="colors"/>
    <arg name="cache" value=".phpcs-cache"/>

    <file>src</file>
    <file>test</file>

    <rule ref="Doctrine">
        <exclude name="Generic.Files.LineLength.TooLong" />
        <exclude name="Squiz.Commenting.FunctionComment.InvalidNoReturn" />
    </rule>
</ruleset>
